/*----------------------------------------------------------------------------
 * data.h
 *----------------------------------------------------------------------------*/

#ifndef DATA_H_
#define DATA_H_

/*----------------------------------------------------------------------------
 * Description:
 * 		Types of movements that can be achieved
 *----------------------------------------------------------------------------*/
typedef enum
{
	STOP,
	FORWARD,
	BACKWARD,
	SPIN_CW,
	SPIN_CCW
} Type;

/*----------------------------------------------------------------------------
 * Description:
 * 		Move structure that contains the distance, speed and movement type
 *----------------------------------------------------------------------------*/
typedef struct
{
	double distance = 5.0;
	double speed = 2.0;
	Type type;
} Move;

/*----------------------------------------------------------------------------
 * Description:
 * 		Data structure that contains the temperature array and Move object
 *----------------------------------------------------------------------------*/
typedef struct
{
	uint8_t temperatures[9] = {1, 2, 3, 4, 5, 6, 7, 8, 9};
	Move move;
} Data;

#endif
