/* Main program loop */
//int main(void) __attribute__((OS_main));
int usartfda;
int usartfdb;

int main(void)
{

	initLCD();

	uint8_t testTemps[9] = {1, 2, 3, 4, 5, 10, 15, 12, 14};
	displayTemperatures(testTemps);

	vTaskStartScheduler();

}

void displayTemperatures(uint8_t *temperatures) {
	clearLCD();

	char* topRow = "";
	sprintf(topRow,
			"%2d %2d %2d %2d [%2d] \n",
			temperatures[1],
			temperatures[2],
			temperatures[3],
			temperatures[4],
			temperatures[0]);

	char* bottomRow = "";
	sprintf(bottomRow,
			"%2d %2d %2d %2d \n",
			temperatures[5],
			temperatures[6],
			temperatures[7],
			temperatures[8]);

	writeLCDRowTwo(bottomRow);
	writeLCDRowOne(topRow);
//	writeLCDRowTwo("Hello World");
}

/*-----------------------------------------------------------*/


void vApplicationStackOverflowHook( TaskHandle_t xTask,
                                    portCHAR *pcTaskName )
{

	DDRB  |= _BV(DDB7);
	PORTB |= _BV(PORTB7);       // main (red PB7) LED on. Mega main LED on and die.
	while(1);
}

